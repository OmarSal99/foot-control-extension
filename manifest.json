{
  "manifest_version": 3,
  "name": "foot pedal!",
  "description": "Base Level Extension",
  "version": "1.0",
  "permissions": ["tabs", "debugger", "activeTab", "storage", "notifications"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "extension-logo.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  }
}
